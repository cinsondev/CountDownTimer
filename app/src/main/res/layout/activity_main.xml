<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:countdownTimer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <me.cinson.countdowntimer.CountdownTimerView
        android:id="@+id/countdown_timer_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray" />

    <me.cinson.countdowntimer.CountdownTimerView
        android:id="@+id/countdown_timer_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        countdownTimer:textColor="@android:color/holo_red_dark"
        countdownTimer:textPadding="1dp"
        countdownTimer:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray" />

    <me.cinson.countdowntimer.CountdownTimerView
        android:id="@+id/countdown_timer_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        countdownTimer:backgroundColor="@android:color/holo_blue_dark"
        countdownTimer:textColor="@android:color/white"
        countdownTimer:textPadding="2dp"
        countdownTimer:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>